<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupCalendar">
    <!--app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dayBar"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:weightSum="12">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="day 1"
            android:id="@+id/day1Date"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text= "day 2"
            android:id="@+id/day2Date"
            android:textAlignment="center"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dayBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">
        <LinearLayout
            android:id="@+id/groupCalendarTimeLayout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">
            <!--android:weightSum="24"-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="1:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="2:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="4:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="5:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="6:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="7:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="8:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="9:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="10:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="11:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="12:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="1:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="2:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="4:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="5:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="6:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="7:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="8:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="9:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="10:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="11:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="12:00 AM"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupCalendarDay1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="1440dp"
            android:background="@color/design_default_color_error"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/groupCalendarTimeLayout"
            app:layout_constraintRight_toLeftOf="@id/groupCalendarDay2">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupCalendarDay2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="1440dp"
            android:background="@color/purple_700"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/groupCalendarDay1"
            app:layout_constraintRight_toRightOf="parent">
        </LinearLayout>

    </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>