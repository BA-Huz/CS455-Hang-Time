<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupCalendar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topFrame"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/topFrame"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">
        <LinearLayout
            android:id="@+id/groupCalendarTimeLayout"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent">
            <!--android:weightSum="24"-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="12:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="1:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="2:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="4:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="5:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="6:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="7:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="8:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="9:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="10:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="11:00 AM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="12:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="1:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="2:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="4:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="5:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="6:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="7:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="8:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="9:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="10:00 PM"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="11:00 PM"/>
            <!--this view is so the bar at the bottom with menu home and back does not cover the last textview-->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/groupCalendarDay1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="1545dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/groupCalendarTimeLayout"
            app:layout_constraintRight_toLeftOf="@id/groupCalendarDay2">
        </ImageView>

        <ImageView
            android:id="@+id/groupCalendarDay2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="1545dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/groupCalendarDay1"
            app:layout_constraintRight_toRightOf="parent">
        </ImageView>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="100">
        <Button
            android:layout_height="70dp"
            android:layout_width="0dp"
            android:layout_weight="46"
            android:text = "Schedule a Group Event"
            android:id="@+id/GroupEventButton" />
        <View
            android:layout_height="70dp"
            android:layout_width="0dp"
            android:layout_weight="4"/>
        <Button
            android:layout_height="70dp"
            android:layout_width="0dp"
            android:layout_weight="46"
            android:text = "Add a new member"
            android:id="@+id/addGroupMember"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>